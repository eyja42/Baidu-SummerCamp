<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_weather_card">

    <TextView
        android:id="@+id/warning_type"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/warning_white"
        android:gravity="center_vertical"
        android:text="高温"
        android:textColor="@color/weather_activity_textColor"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/warning_detail"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:text="高温，7月30日 星期日21:36结束。"
        android:textColor="@color/weather_activity_textColor"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="15dp"
        android:text="国家预警发布中心"
        android:textColor="@color/weather_activity_textColor"
        android:textSize="14dp"/>
</LinearLayout>